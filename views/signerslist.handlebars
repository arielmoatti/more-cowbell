{{>cornerBtn logged=true}}
<div class="signers">
    <h1>supporters who need more cowbell:</h1>
    <div class="container">
        <div>
            {{#rows}}
                <h2 class="signerList">
                    {{#if url}}
                        <a class="link" href="{{url}}" target="_blank">{{first}} {{last}}</a>
                    {{else}}
                        <span>{{first}} {{last}}</span>
                    {{/if}}

                    {{#if age}}
                        <span>&nbsp; |&nbsp;  {{age}}</span>
                    {{/if}}

                    {{#if city}}
                        <span>&nbsp; | &nbsp;</span>
                        <a class="link" href="signerslist/{{city}}">{{city}}</a>                
                    {{/if}}
                </h2>
            {{/rows}}
        </div>
        <a href="/thank-you" class="myBtn">back</a>
    </div>
</div>
