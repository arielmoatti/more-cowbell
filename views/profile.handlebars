{{>cornerBtn logged=true}}
<div class="profile">
    <h2>please provide some personal information</h2>
    <h3>webite: your homepage or any favourite address</h3>
    <div class="container">            
        <form method='POST'>
            <input type='text' name='age' placeholder='Age' autocomplete='off'>
            <input type='text' name='city' placeholder='City' autocomplete='off'>
            <input type='text' name='url' placeholder='Website' autocomplete='off'>
            {{>csrf}}
            <button type="submit">continue</button>
        </form>
        {{#if message}}
            {{>msgBox}}
        {{/if}}
    </div>
</div>